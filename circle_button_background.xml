<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- 버튼 내부 배경색: 흰색 -->
    <solid android:color="@android:color/white"/> <!-- 또는 android:color="#FFFFFF" -->

    <!-- 버튼 테두리: 얇은 검은색 선 -->
    <stroke
        android:width="1dp"
        android:color="@android:color/black"/> <!-- 또는 android:color="#000000" 테두리 색상 -->

    <!-- 버튼 크기 (이전과 동일) -->
    <size
        android:width="56dp"
        android:height="56dp"/>
</shape>